{
  "environment": {
    "name": "minimal-lxd",
    "description": "Minimal development setup with SQLite and UDP/HTTP trackers on LXD. No HTTPS, monitoring, or backups. Ideal for local testing and rapid development iteration."
  },
  "ssh_credentials": {
    "private_key_path": "/home/torrust/.ssh/testing_rsa",
    "public_key_path": "/home/torrust/.ssh/testing_rsa.pub"
  },
  "provider": {
    "provider": "lxd",
    "profile_name": "torrust-profile-minimal-lxd"
  },
  "tracker": {
    "core": {
      "database": {
        "driver": "sqlite3",
        "database_name": "tracker.db"
      },
      "private": false
    },
    "udp_trackers": [
      {
        "bind_address": "0.0.0.0:6969"
      }
    ],
    "http_trackers": [
      {
        "bind_address": "0.0.0.0:7070"
      }
    ],
    "http_api": {
      "bind_address": "0.0.0.0:1212",
      "admin_token": "MyAccessToken"
    },
    "health_check_api": {
      "bind_address": "127.0.0.1:1313"
    }
  }
}
{
  "environment": {
    "name": "minimal-hetzner",
    "description": "Minimal cloud deployment on Hetzner with SQLite and basic UDP/HTTP trackers. No HTTPS, monitoring, or backups. Suitable for simple public cloud deployments or initial Hetzner infrastructure testing."
  },
  "ssh_credentials": {
    "private_key_path": "/home/torrust/.ssh/testing_rsa",
    "public_key_path": "/home/torrust/.ssh/testing_rsa.pub"
  },
  "provider": {
    "provider": "hetzner",
    "api_token": "REPLACE_WITH_HETZNER_API_TOKEN",
    "server_type": "cx22",
    "location": "nbg1",
    "image": "ubuntu-24.04"
  },
  "tracker": {
    "core": {
      "database": {
        "driver": "sqlite3",
        "database_name": "tracker.db"
      },
      "private": false
    },
    "udp_trackers": [
      {
        "bind_address": "0.0.0.0:6969"
      }
    ],
    "http_trackers": [
      {
        "bind_address": "0.0.0.0:7070"
      }
    ],
    "http_api": {
      "bind_address": "0.0.0.0:1212",
      "admin_token": "MyAccessToken"
    },
    "health_check_api": {
      "bind_address": "127.0.0.1:1313"
    }
  }
}